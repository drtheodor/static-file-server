---
import { ClientRouter, fade, slide } from "astro:transitions";

import "@/styles/global.css";

type Props = {
  title: string,
}

const { title } = Astro.props;

let animFunc;

switch (process.env.SFS_ANIM ?? 'fade') {
  case 'slide':
    animFunc = slide;
    break;
  
  case 'none':
    animFunc = null;
    break;

  case 'fade':
  default:
    animFunc = fade;
    break;
}

const duration = process.env.SFS_ANIM_TIME ?? '0.1s';
const anim = animFunc ? animFunc({ duration }) : "none";
---

<!DOCTYPE html>
<html lang="en" transition:name="root" transition:animate="none">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{title}</title>

  <ClientRouter />
</head>
<body>
  <main transition:animate={anim}>
    <slot />
  </main>

  <footer>
    <a href="https://github.com/drtheodor/static-file-server">static-file-server</a> by @<a href="https://github.com/drtheodor">drtheodor</a>.
  </footer>
</body>
<style>
  body { 
    font-family: sans-serif; 
    max-width: 800px; 
    margin: 0 auto; 
    padding: 20px; 
    line-height: 1.6;
  }
  footer {
    border-top: 2px solid var(--bg4-color);
    margin: 50px 0;
    padding-top: 20px;
    text-align: center;
  }

  footer > a {
    color: var(--primary-color);
  }
</style>
</html>
